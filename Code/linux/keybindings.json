// $HOME/.config/Code/User/keybindings.json
// $HOME/Library/Application Support/Code/User/keybindings.json
// $HOME/AppData/Roaming/Code/User/keybindings.json
// Place your key bindings in this file to override the defaults
[
    {
        "key": "ctrl+j",
        "command": "selectNextSuggestion",
        "when": "suggestWidgetVisible"
    },
    {
        "key": "ctrl+k",
        "command": "selectPrevSuggestion",
        "when": "suggestWidgetVisible"
    },
    {
        "key": "ctrl+j",
        "command": "workbench.action.quickOpenSelectNext",
        "when": "inQuickOpen"
    },
    {
        "key": "ctrl+k",
        "command": "workbench.action.quickOpenSelectPrevious",
        "when": "inQuickOpen"
    },
    // switch between split windows with `ctrl + j/k`
    {
        "key": "ctrl+j",
        "command": "workbench.action.focusNextGroup",
        "when": "multipleEditorGroups"
    },
    {
        "key": "ctrl+k",
        "command": "workbench.action.focusPreviousGroup",
        "when": "multipleEditorGroups"
    },
    // switch between terminals with `ctrl + shift + j/k`
    {
        "key": "ctrl+shift+j",
        "command": "workbench.action.terminal.focusNext",
        "when": "terminalFocus" // tricky here, only k works when terminal is not focused.
    },
    {
        "key": "ctrl+shift+k",
        "command": "workbench.action.terminal.focusPrevious",
        "when": "terminalFocus"
    },
    // split terminal
    {
        "key": "ctrl+shift+r", // split right
        "command": "workbench.action.terminal.split",
        "when": "terminalFocus"
    },
    // unspilt terminal
    {
        "key": "ctrl+shift+u",
        "command": "workbench.action.terminal.kill",
        "when": "terminalFocus"
    },
    // switch between terminals within a splitted tab with `ctrl + j/k`
    {
        "key": "ctrl+j",
        "command": "workbench.action.terminal.focusNextPane",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+k",
        "command": "workbench.action.terminal.focusPreviousPane",
        "when": "terminalFocus"
    },
    // Toggle between terminal and editor focus
    {
        "key": "ctrl+`",
        "command": "workbench.action.terminal.focus"
    },
    {
        "key": "ctrl+`",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "terminalFocus"
    },
    // Toggle between editors
    {
        "key": "ctrl+tab",
        "command": "workbench.action.nextEditor",
        "when": "editorFocus"
    },
    {
        "key": "ctrl+shift+k",
        "command": "workbench.action.previousEditor",
        "when": "editorFocus"
    },
    // Use vim to show hover definition
    {
        "key": "h",
        "command": "editor.action.scrollLeftHover",
        "when": "editorHoverFocused",
    },
    {
        "key": "l",
        "command": "editor.action.scrollRightHover",
        "when": "editorHoverFocused",
    },
    {
        "key": "j",
        "command": "editor.action.scrollDownHover",
        "when": "editorHoverFocused",
    },
    {
        "key": "k",
        "command": "editor.action.scrollUpHover",
        "when": "editorHoverFocused",
    },
]